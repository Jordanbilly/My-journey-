#include<stdio.h>

int main()
{
float number;// a program that determines a negative and positive number or a zero
printf("Enter a Number:");
scanf("%f", &number);

 if(number > 0)
 {
  
  printf("positive number");
 }

  if(number < 0)
 {
  
  printf("Negative number");
 }
else if (number ==0)
{
    printf("zero");
}
return 0;
 }
